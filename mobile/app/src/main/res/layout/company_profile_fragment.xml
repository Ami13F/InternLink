<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="src_over"
    android:backgroundTint="#769E9D9D"
    tools:context=".fragments.CompanyFragment">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardCornerRadius="50dp"
        app:strokeColor="@color/cardview_dark_background"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/avatarEdit"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Avatar"
            app:srcCompat="@drawable/personicon" />

    </com.google.android.material.card.MaterialCardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/round_profile_box"
        android:layout_height="150dp"
        android:backgroundTint="#CC2979FF">

        <TextView
            android:id="@+id/usernameText"
            android:text="Hello Company, "
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="250dp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

    </FrameLayout>

    <Button
        android:id="@+id/addInternshipBtn"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="50dp"
        android:background="@android:drawable/ic_menu_add"
        android:textColor="#ffffff"
        app:backgroundTint="#2979FF"
        app:srcCompat="@drawable/round_corners" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/logout"
        android:backgroundTint="#FFFFFF" />

</FrameLayout>