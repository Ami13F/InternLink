<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Internship"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />


            <EditText
                android:id="@+id/titleField"
                android:hint="Title"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="30dp"
                android:importantForAutofill="no"
                android:inputType="text"
                android:gravity="center"
                android:background="@drawable/round_corners"
                android:backgroundTint="#5A2979FF"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF" />

            <com.hbb20.CountryCodePicker
                android:id="@+id/locationField"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/round_corners"
                android:backgroundTint="#5A2979FF"
                android:textColorHint="#FFFFFF"
                app:ccp_contentColor="#FFFFFF"
                android:hint="Location"
                android:gravity="center"
                android:importantForAutofill="no"
                android:textAlignment="center"
                app:ccpDialog_showCloseIcon="true"
                app:ccp_defaultPhoneCode="40"
                app:ccp_showFullName="true"
                app:ccp_showPhoneCode="false" />
            <TextView
                android:id="@+id/startDateField"
                android:hint="Start Date"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="30dp"
                android:importantForAutofill="no"
                android:inputType="date"
                android:gravity="center"
                android:background="@drawable/round_corners"
                android:backgroundTint="#5A2979FF"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/endDateField"
                android:hint="End Date"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="30dp"
                android:importantForAutofill="no"
                android:inputType="date"
                android:gravity="center"
                android:background="@drawable/round_corners"
                android:backgroundTint="#5A2979FF"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF" />
            <EditText
                android:id="@+id/descriptionField"
                android:hint="Description"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="30dp"
                android:importantForAutofill="no"
                android:inputType="text"
                android:gravity="center"
                android:background="@drawable/round_corners"
                android:backgroundTint="#5A2979FF"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/saveInternshipBtn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:text="Save internship"
                android:background="#009688"/>

            <Button
                android:id="@+id/applyToInternshipBtn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:text="Apply"
                android:background="#009688"/>
            <Button
                android:id="@+id/closeBtn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:text="Close"
                android:background="#65656A"/>
        </LinearLayout>

    </ScrollView>
</FrameLayout>